import java.util.Scanner;

public class WhileTest02 {
	public static void main(String[] args) {
			
		Scanner sc = new Scanner(System.in);
		int num, even_total=0, odd_total=0;
		int even_count=0, odd_count=0;
		int i =0;
		while(i<=10) {
			System.out.print("Á¤¼ö : ");
			num = sc.nextInt();
			
			if(num%2==0) {
				even_count++;
				even_total+=num;
			}else {
				odd_count++;
				odd_total+=num;
			}
			i++;
				
		}
		
		if(even_count !=0) {
			System.out.println("Â¦¼ö Æò±Õ : "+even_total/even_count);
			
		}else if(odd_count!=0){
			System.out.println("È¦¼ö Æò±Õ : "+odd_total/odd_count);
			
		}
		
		
	}
}
